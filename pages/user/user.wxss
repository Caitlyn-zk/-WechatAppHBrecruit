.public-number .mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color: #000000;
  z-index:1;
  top:0;
  left:0;
  opacity:0.5;
}
.public-number .qr_code{
  width: 100%;
  position:fixed;
  top: 25%;
  left:0;
  text-align: center;
  z-index: 10;
}
.public-number .qr_code image{
  width: 598rpx;
  height: 732rpx;
}
