/* pages/resume_info/info.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #fff !important;
}
.person-infor {
  padding: 0 20px;
  width: 100%;
  background-color: #fff;
  font-family:Microsoft YaHei;
}
.person-infor .page-body{
  padding-bottom: 20rpx;
}
.person-infor .page-section .page-section-title {
  font-size:24rpx;
  font-weight:400;
  color:#999999;
  padding-top: 19rpx;
}
.arrow-division {
  display: inline-block;
  height: 1rpx;
  width: 15rpx;
  border: 1px solid #333344;
  margin: 29rpx 40rpx;
  background: #333344;
}

.weui-input {
  font-size:28rpx;
  font-weight:bold;
  color:#333344;
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
}
.weui-cells_after-title {
  border-bottom: 1px solid #ddd;
}
.weui-cells_after-title .weui-input::placeholder {
  color: #999;
}
/* 选择框 */
.section-select {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}
/* 入学时间 */
.page-item-endtime {
  display: flex;
  justify-content: space-between;
}
/* 保存按钮 */
.btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
}
.btn-area .btn-area-butt {
  width: 100%;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(5,215,151,1);
  border-radius:4px;
  color: #fff;
}
.weui-icon {
  width: 16rpx !important;
  height: 34rpx !important;
}
/* 填写教育经历第二步 */
.main-title .title-num {
  line-height: 73rpx;
  font-size: 20rpx;
  color: #666;
  letter-spacing: 5rpx;
}
.main-title .title-num .title-step {
  font-size: 36rpx;
  color: #05D797;
  font-weight: bold;
  padding-right: 10rpx;
}
.main-title .title-text {
  font-size:26rpx;
  font-weight:bold;
  color:rgba(5,215,151,1);
  line-height:31rpx;
  padding-bottom: 50rpx;
}