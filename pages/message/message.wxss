/* pages/information/information.wxss */
.information {
  display: block;
  background: #F5F5F5;
  width: 100%;
  height: 100%;
  font-family:Microsoft YaHei;
  letter-spacing: 1rpx;
}
.information .info {
  background: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
  font-size: 24rpx;
  color:rgba(0,0,0,1);
}
.information .info.on {
  font-size:24rpx;
  color:#999999;
}
.information .info .company-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 54rpx;
}
.have-read{
  background-color: #FF7302;
}
.unread{
  background-color: #999999;
}
.icon{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
}
.information .company-info .company-name {
  font-weight:bold;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-right: auto;
}
.information .company-info .see-time {
  font-weight:400;
  color: #ccc;
}
.information .info .see-tipe {
  font-weight:400;
  font-size: 26rpx;
  line-height: 45rpx;
}

