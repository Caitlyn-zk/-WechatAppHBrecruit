/* pages/resume_workfor/resume_workfor.wxss */ 
page{
  background-color: #fff;
}
.work-for {
  width: 100%;
  height: 100%;
  padding:  0 20rpx ;
  position: fixed;
  left:0;
  /* top:20rpx; */
  background-color: #fff;
}
.work-for .title {
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 20rpx 0;
  color: #999999;
}
.work-for input {
  font-size:28rpx;
  font-weight:bold;
  color:#000000;
  border-bottom: 1rpx solid #DDDDDD;
}
.work-for .time-select{
  display: flex;
  align-items: center;
}
.work-for .time-select .interval{
  background-color: #000000;
  width: 14rpx;
  height: 3rpx;
  margin: auto 20rpx;
}
.select{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.select .weui-input{
  font-size:28rpx;
  font-weight:bold;
  color:#333344;
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
}
.ql-container{
  height: auto;
  border-bottom: 1rpx solid #DDDDDD;
}

.btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* margin: 230rpx 0 20rpx; */
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
}
.btn-area .btn-area-butt {
  width: 100%;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(5,215,151,1);
  border-radius:4px;
  color: #fff;
}
.textarea {
  width: auto;
  height: 60rpx;
  font-size:28rpx;
  font-weight:bold;
  color:#333344;
  letter-spacing: 1rpx;
  line-height: 36rpx;
  min-height: 60rpx;
  max-height: 600rpx;
  outline: none;
  overflow-y: scroll;
  text-align:left!important;
  border-bottom: 1rpx solid #DDDDDD;
}
.textarea .textarea-text {
  display: inline-block;
  
}
.total-text {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 60rpx;
  text-align: right;
}
/* 按钮 */
