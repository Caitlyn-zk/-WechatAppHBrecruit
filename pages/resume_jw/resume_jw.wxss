/* pages/resume_info/info.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff !important;
}
.person-infor {
  padding: 0 20rpx;
  width: 100%;
  width: 100%;
  background-color: #fff;
  font-family:Microsoft YaHei;
}
.person-infor .select {
  border-bottom: 1px solid #ddd;
}

/* 选择框 */
.section-select {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
}
.salary-select{
  display: flex;
  align-items: center;
}
.salary-select .interval{
  background-color: #333344;
  width: 14rpx;
  height: 3rpx;
  margin: auto 20rpx;
}
.select{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}