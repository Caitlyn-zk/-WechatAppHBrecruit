/* pages/resume_info/info.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #fff !important;
}
.person-infor {
  padding: 0 20px;
  width: 100%;
  background-color: #fff;
  font-family:Microsoft YaHei;
}

/* 填写求职意向第三步 */
.main-title .title-num {
  line-height: 73rpx;
  font-size: 20rpx;
  color: #666;
  letter-spacing: 5rpx;
}
.main-title .title-num .title-step {
  font-size: 36rpx;
  color: #05D797;
  font-weight: bold;
  padding-right: 10rpx;
}
.main-title .title-text {
  font-size:26rpx;
  font-weight:bold;
  color:rgba(5,215,151,1);
  line-height:31rpx;
  padding-bottom: 50rpx;
}
.salary-select{
  display: flex;
  align-items: center;
}
.interval{
  background-color: #000000;
  width: 14rpx;
  height: 3rpx;
  margin: auto 20rpx;
}
.select{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
}