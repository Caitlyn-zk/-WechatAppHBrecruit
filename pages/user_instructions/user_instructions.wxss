/* pages/user_instructions/user_instructions.wxss */
page {
  background-color: #fff;
}
.instruction {
  padding: 0 20px 20px;
  font-family:Microsoft YaHei;
  background: #fff;
}
.instruction .instruction-item {
  padding-top: 30rpx;
  border-bottom: 1px solid #DDDDDD;
}
.instruction .instruction-item:last-child {
  border-bottom: none;
}
.instruction-item .question {
  font-size:28rpx;
  font-weight:bold;
  color:#333344;
  line-height: 40rpx;
}
.instruction-item .answer {
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
  margin-bottom: 29rpx;
}
