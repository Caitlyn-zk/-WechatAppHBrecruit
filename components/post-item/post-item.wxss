.post-info{
  background-color: #fff;
  padding: 25rpx 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  width: 100%;
}
.post-info .post-info-left{
  width: 50%;
  font-size: 24rpx;
  /* border: 1rpx solid red; */
}
.post-info .post-info-left .post-name{
  color: #000000;
  font-weight: bold;
  font-size: 30rpx;
  line-height: 30rpx;
}
.post-info .post-info-left .org-type{
  color: #999999;
  line-height: 64rpx;
  /* margin-top: 24rpx; */
}
.post-info .post-info-left .org-name-muster{
  color: #444444;
  line-height: 24rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.post-info .post-info-left .org-name-muster .icon-company{
  width: 24rpx;
  height: 24rpx;
  /* border: 1rpx solid red; */
  margin-right: 20rpx;
}
.post-info .post-info-left .org-name-muster .org_name{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
